<div class='registration-main'>
  <%= form_with model: resource, as: resource_name, url: session_path(resource_name), class: 'registration-second', local: true do |f| %>
    <p class='signup'>ログイン</p>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <div class="field">
      <label class="form-text">メールアドレス</label>
      <%= f.email_field :email, class:"input-default", placeholder:"あなたのメールアドレス", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <label class="form-text">パスワード</label>
      <%= f.password_field :password, class:"input-default", placeholder:"あなたのパスワード", autocomplete: "current-password" %>
    </div>

    <div class="btn login-btn">
      <%= f.submit "ログイン", class: "login-in-btn" %>
    </div>
  <% end %>
</div>

